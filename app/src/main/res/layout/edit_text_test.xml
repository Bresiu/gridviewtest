<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.test.app.FloatLabelLayout
        style="@style/profile_float_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatLabelSidePadding="6dp"
        app:floatLabelTextAppearance="@style/FloatLabel">

        <EditText
            android:id="@+id/edit_username"
            style="@style/profile_edittext_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/log_in_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:nextFocusDown="@+id/edit_password" />

    </com.test.app.FloatLabelLayout>

    <com.test.app.FloatLabelLayout
        style="@style/profile_float_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatLabelSidePadding="6dp"
        app:floatLabelTextAppearance="@style/FloatLabel">

        <EditText
            android:id="@+id/edit_password"
            style="@style/profile_edittext_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/log_in_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true" />
    </com.test.app.FloatLabelLayout>

</LinearLayout>